// Prisma Schema - Clean Invite + Registration Flow

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============= ENUMS =============

enum Role {
  SuperAdmin
  ChurchAdmin
  Counselor
  User
}

enum InviteType {
  ChurchAdmin
  Counselor
  Church
}

enum GenderType {
  Male
  Female
}

enum MatchPreferenceType {
  my_church
  my_church_plus
  other_churches
}

enum SubscriptionTierType {
  free
  premium
}

enum SubscriptionStatusType {
  active
  expired
  canceled
}

enum StatusType {
  pending
  active
  suspended
}

enum VerificationStatus {
  pending
  in_progress
  verified
  rejected
}

// ============= AUTH TABLE =============

model Account {
  id        String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email     String  @unique
  password  String
  firstName String
  lastName  String
  phone     String?
  role      Role

  // Email verification
  isEmailVerified         Boolean   @default(false)
  emailVerificationToken  String?   @unique
  emailVerificationExpiry DateTime?
  emailVerificationLastSentAt DateTime?

  // Password reset
  passwordResetToken  String?   @unique
  passwordResetExpiry DateTime?

  status    StatusType @default(active)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  // Role-specific profiles
  superAdmin  SuperAdmin?
  churchAdmin ChurchAdmin?
  counselor   Counselor?
  user        User?

  // Invites created by this account (if admin)
  invitesCreated Invite[] @relation("CreatedBy")

  @@map("accounts")
}

// ============= ROLE TABLES =============

model SuperAdmin {
  id        String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  accountId String @unique @db.Uuid

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  churchesCreated Church[]

  @@map("super_admins")
}

model ChurchAdmin {
  id        String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  accountId String @unique @db.Uuid
  churchId  String @db.Uuid

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
  church  Church  @relation(fields: [churchId], references: [id], onDelete: Cascade)

  @@index([churchId])
  @@map("church_admins")
}

model Counselor {
  id        String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  accountId String @unique @db.Uuid
  churchId  String @db.Uuid

  bio             String?

  account       Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
  church        Church  @relation(fields: [churchId], references: [id], onDelete: Cascade)
  assignedUsers User[]  @relation("AssignedUsers")

  @@index([churchId])
  @@map("counselors")
}

model User {
  id        String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  accountId String     @unique @db.Uuid
  gender    GenderType

  // Nigerian Location
  originCountry String?
  originState   String?
  originLga     String?

  residenceCountry String?
  residenceState   String?
  residenceCity    String?
  residenceAddress String?

  // Dating Profile
  occupation      String?
  interests       Json?
  matchPreference MatchPreferenceType?

  // Subscription
  subscriptionTier      SubscriptionTierType   @default(free)
  subscriptionStatus    SubscriptionStatusType @default(active)
  subscriptionExpiresAt DateTime?

  // Verification
  isVerified         Boolean   @default(false)
  verificationStatus String    @default("pending") // pending, in_progress, verified, rejected
  verificationNotes  String? // Counselor's notes
  verifiedAt         DateTime?

  assignedCounselorId String?    @db.Uuid
  assignedCounselor   Counselor? @relation("AssignedUsers", fields: [assignedCounselorId], references: [id])

  churchId String? @db.Uuid
  church   Church? @relation("ChurchMembers", fields: [churchId], references: [id])

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@index([churchId])
  @@map("users")
}

// ============= CHURCH MODEL =============

model Church {
  id           String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  officialName String
  aka          String?
  email        String  @unique
  phone        String

  // Nigerian Address
  state   String
  lga     String?
  city    String?
  address String?

  status StatusType @default(pending)

  createdBy String     @db.Uuid
  creator   SuperAdmin @relation(fields: [createdBy], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  churchAdmins ChurchAdmin[]
  counselors   Counselor[]
  members      User[]        @relation("ChurchMembers")
  invites      Invite[]

  @@map("churches")
}

// ============= INVITE SYSTEM =============
// Generic invite system - used for both ChurchAdmin and Counselor invites

model Invite {
  id    String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  token String     @unique
  type  InviteType
  email String

  // Church context (required for ChurchAdmin and Counselor)
  churchId String? @db.Uuid
  church   Church? @relation(fields: [churchId], references: [id], onDelete: Cascade)

  // Who created this invite
  createdByAccountId String  @db.Uuid
  createdBy          Account @relation("CreatedBy", fields: [createdByAccountId], references: [id])

  // Status
  used      Boolean   @default(false)
  usedAt    DateTime?
  expiresAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("invites")
}
